# Example environment variables for the ShitPostr backend
# Copy this file to `.env` and fill in real values. DO NOT commit your `.env` file.

# Port the server will listen on (optional, default is 5000)
PORT=5000

# MongoDB connection string
# Local example:
# MONGO_URI=mongodb://127.0.0.1:27017/shitpostr
# Atlas example (replace <username> and <password> and encode special characters):
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/shitpostr?retryWrites=true&w=majority
MONGO_URI=

# JWT secret used to sign and verify JSON Web Tokens
# Generate a long random value. Example generation:
# openssl rand -base64 48
JWT_SECRET=
